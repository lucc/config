loadplugins '\.(js|penta)$'
group user
set! browser.tabs.closeWindowWithLastTab=false
set showtabline=never

"javascript var gvim_args = '-f +<line> +"silent! call cursor(0, <column>)" <file>'
if navigator.platform == "MacIntel"
  "javascript var gvim_cmd = '/usr/local/bin/gvim'
  set editor='/usr/local/bin/gvim -f +<line> +"silent! call cursor(0, <column>)" <file>'
else
  "js var gvim_cmd = 'gvim'
  set editor='gvim -f +<line> +"silent! call cursor(0, <column>)" <file>'
endif
"execute 'set editor=' + gvim_cmd + ' ' + gvim_args

set defsearch=d

map ! -ex !
map B -ex bmarks!
map E <silent> -ex execute '!www-text-browser.sh ' + buffer.URL.toString()
command! vpn silent !vpn.sh
command! wlan silent !wlan.sh
command! darkcss source ~/src/css/reader.css | source ~/src/css/solarized-dark.css
command! lightcss source ~/src/css/reader.css | source ~/src/css/solarized-light.css

source ~/.pentadactyl/colors/pentadactyl-solarized/colors/solarized-light.penta
source ~/.pentadactyl/colors/pentadactyl-solarized/colors/solarized-dark.penta

autocmd Fullscreen * set guioptions+=s

" vim: ft=pentadactyl syntax=vim
