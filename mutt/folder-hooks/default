# config file for mutt to organize folders containing mail from mailing lists
# vim: filetype=muttrc

set index_format="%4C %Z %{%b %d} %-15.15L (%?l?%4l&%4c?) %s"
fcc-save-hook "~Lgrillchill@googlegroups\.com"     +lists/grillchill
fcc-save-hook "~Ltanzhans@googlegroups\.com"       +lists/tanzhans
fcc-save-hook "~Lverteiler@sammersee-festival\.de" +lists/sammersee
