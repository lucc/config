# config file for mutt to organize folders containing mail from mailing lists
# vim: filetype=muttrc

set index_format = "$my_index_format_1 %-20.20n $my_index_format_2"

save-hook     "~Lgrillchill@googlegroups\.com"     +lists/grillchill-old
fcc-save-hook "~Lverteiler@sammersee-festival\.de" +sammersee/`date +%Y`
