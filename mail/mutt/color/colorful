# plain color scheme by luc
# vim: ft=muttrc

# reset colors and load the defaults
source ~/.mutt/color/default

# extension of the defaults {{{3
color signature color51 default
color attachment brightyellow default
#color sidebar_new yellow default

# index {{{3
color index $my_emph4 default ~U # unread
color index $my_gray2 default ~D # deleted
color index $my_blue1 default ~T # tagged
color index $my_emph5 default "~Lsisabach" # simone
color index $my_emph6 default "~U ~Lsisabach" # simone unread

# header display in the pager {{{3
color header $my_blue2 default ^Subject:
#color header red default ^From:
color header $my_emph1 default "^Importance: high"

# quoted messages {{{3
color quoted0  $my_lila_quote1 default
color quoted1  $my_lila_quote2 default
color quoted2  $my_lila_quote3 default
color quoted3  $my_lila_quote4 default
color quoted4  $my_lila_quote5 default

color body $my_lila_quote_emph default "^.*(wrote|schrieb).*:"
color body $my_lila_quote_emph default "-{2,} ?((Original|Forwarded) [Mm]essage|(Original-|Urspr√ºngliche )Nachricht) ?-{2,}"

# urls {{{3
color body $my_emph2 default "(http|ftp|news|telnet|finger)://[_a-zA-Z0-9\./~\-]+"
color body $my_emph2 default "www\.([_a-zA-Z0-9\./~\-]+\.)+[-a-z][-a-z]+"
#color body red cyan "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
color body $my_emph3 default "(mailto:)?[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"


color body $my_sig default "( *[-+=#*~_]){6,}"

# for tests in the body {{{3
source ~/.mutt/color/test-table
