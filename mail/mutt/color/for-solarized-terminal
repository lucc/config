#  colors scheme by luc
# vim: ft=muttrc

# This file should be sourced by every color scheme.

# Reset all color definitions.
uncolor index *
uncolor header *
uncolor body *

# defining variables for color names
set my_blue1 = blue
set my_gray1 = brightyellow

# defining variables for abstract color references
set my_normal_color = color7
set my_emph1 = red
set my_emph2 = yellow
set my_emph3 = brightyellow
set my_emph4 = color227
set my_emph5 = brightwhite
set my_emph6 = color201
set my_sig = cyan

# default color definitions {{{3
color normal $my_normal_color default
color hdrdefault brightblue default
#color attachment $my_test_gray4 default
#color attachment $my_test_gray6 default
color attachment $my_gray1 default
color status $my_emph2 default
mono bold bold

# index {{{3
color index $my_emph2 default ~U # unread
#color index $my_gray2 default ~D # deleted
#color index $my_gray1 default ~D # deleted
color index black     default ~D # deleted
color index $my_blue1 default ~T # tagged

# header display in the pager {{{3
color header $my_blue1 default ^Subject:
#color header red default ^From:
color header $my_emph1 default "^Importance: high"

# quoted messages {{{3
color quoted $my_gray1 default

# for pgp errors
color body red default '^gpg: the signature could not be verified.$'
  color body red default '^gpg: WARNING:.*'
color body green default '^gpg: Good signature from .*'
